root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
# insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*{json,yml,yaml}]
indent_size = 2

[*.md]
max_line_length = 80
trim_trailing_whitespace = false

[{Makefile,*.mak}]
indent_style = tab
tab_width = 4

[COMMIT_EDITMSG]
max_line_length = 0
